
<form class="form" action="/birds/{{id}}/edit" method="post">
  <img class="img-circle" src="{{image}}" alt="{{name}}">
  <label for="name" class="form-item">
    Name:
    <input type="text" name="name" value="{{name}}">
  </label>
  
  <label for="cartoon" class="form-item">
    Cartoon:
    <input type="text" name="cartoon" value="{{cartoon}}">
  </label>
  
  <label for="location" class="form-item">
    Location:
    <input type="text" name="location" value="{{location}}">
  </label>

  <label for="flight_Speed" class="form-item">  
  Flight Speed:
    <input type="text" name="flight_Speed" value="{{flight_Speed}}">
  </label>

  <label for="size" class="form-item"> 
  Size:
    <input type="text" name="size" value="{{size}}">
  </label>
  <input type="hidden" name="image" value="{{image}}">
  <input type="submit" name="" value="Submit">
</form>